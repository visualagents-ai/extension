{
  "manifest_version": 3,
  "name": "VisualAgents",
  "short_name":"VisAge",
  "icons": {
    "16": "images/u16.png",
    "48": "images/u48.png",
    "128": "images/u128.png"
  },

  "version": "0.1.0",
  "options_ui": {
    "page": "dist/bex/www/index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "activeTab"
  ],
  "background": {
    "service_worker": "dist/bex/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "css": [ "assets/content.css" ],
      "js": [ "content.js" ]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "action": {
    "default_icon": {
      "16": "images/u16.png",
      "48": "images/u48.png"
    },
    "default_popup": "dist/bex/www/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [ "*" ],
      "matches": [ "*://*/*" ]
    }
  ]
}
